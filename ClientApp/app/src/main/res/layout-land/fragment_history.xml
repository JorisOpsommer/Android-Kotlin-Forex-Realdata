<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                              android:id="@+id/swipeRefreshLayoutHistory"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Search history"
            android:layout_width="360dp"
            android:layout_height="52dp"
            android:id="@+id/txtHistoryWelcome" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center" android:textStyle="bold"
            android:textSize="24sp" android:fontFamily="serif"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" android:typeface="normal"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="415dp"
            android:layout_height="240dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/recycleviewHistory"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.49"
            app:layout_constraintHorizontal_bias="0.503"/>
</android.support.constraint.ConstraintLayout>
</android.support.v4.widget.SwipeRefreshLayout>